{% extends "base.html.twig" %}

{% block titre %} Page listant les auteurs {% endblock %}
{% block contenu %}
<h1>Liste d'auteurs</h1>
<table class="table text-center" id="tableauLivres">
    <thead>
        <tr class="table-dark">
            <th>Prenom</th>
            <th>Nom</th>
            <th>Nombre de livres</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
{% for auteur in auteurs %}
<tr>
    <td class="align-middle"><a href="/auteurs/{{auteur._id}}">{{auteur.prenom}}</a></td>
    <td class="align-middle">{{auteur.nom}}</td>
    <td class="align-middle">{{auteur.livres|length}}</td>
    <td class="align-middle"><a href="/auteurs/modification/{{auteur._id}}" class="btn btn-warning">Modifier</a></td>
    <td class="align-middle">
        <form method="POST" action="/auteurs/delete/{{auteur._id}}" onSubmit="return confirm('Voulez vous vraiment supprimer l\'auteur ?')">
            <button class="btn btn-danger" type="submit">Supprimer</button>
        </form>
    </td>
</tr>
{% endfor %}
</tbody>
</table>
<button onClick="afficherFormulaire()" class="w-100 btn btn-success d-block">Ajouter</button>
<form id="ajoutForm" class="d-none" method="POST" action="">
            <fieldset> 
                <legend>Cr√©ation d'un Auteur</legend>
                <div class="form-group">
                    <label for="titre">Prenom</label>
                    <input type="text" class="form-control" id="prenom" name="prenom">
                </div>
                <div class="form-group">
                    <label for="titre">Nom</label>
                    <input type="text" class="form-control" id="nom" name="nom">
                </div>
                <div class="form-group">
                    <label for="auteur">Age</label>
                    <input type="number" class="form-control" name="age" id="age">
                </div>
                <div class="form-group">
                    <label for="image">image</label>
                    <input type="file" class="form-control-file" id="image" name="image">
                </div>
                    <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="sexe" name="sexe">
                    <label class="form-check-label" for="defaultCheck1">Homme</label>
                    </div>        
                <button class="btn btn-primary" type="submit">Valider</button>
                </fieldset>
        </form>

        <script src="/javascript/ajoutLivre.js"></script>
        

{% endblock %} 